<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0277BD"
        android:singleLine="true" />

    <Button
        android:id="@+id/clickSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addText"
        android:onClick="SelectFragment"
        android:text="Submit" />

    <fragment
        android:id="@+id/fragment1"
        class="com.amritha.acadgild.android_session10_assignment1.SimpleAddition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/clickSubmit" />

</RelativeLayout>